doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0")
        meta(http-equiv="X-UA-Compatible" content="ie=edge")
        link(rel="stylesheet" href="css/style.css")
        title UCHI test task
    body
        div.container

            p.verbose
                span#num1place
                span &nbsp;+&nbsp;
                span#num2place
                span &nbsp;=&nbsp;
                span#answer ?

            <svg xmlns="http://www.w3.org/2000/svg" width="515" height="120" id="arrow1">
                <defs>
                    <marker id='head' orient="auto" markerUnits="userSpaceOnUse" markerWidth='20' markerHeight='20' refX='0' refY='7'>
                        <path d='M0,0 L0,15 L15,7 z' fill="none" stroke="red" stroke-width="1"/>
                    </marker>
                </defs>
                <path id='arrow1-line' marker-end='url(#head)' stroke-width='1' fill='none' stroke='red' d='M0 100 Q 135 0 260 90' />
            </svg>



            <svg xmlns="http://www.w3.org/2000/svg" width="515" height="120" id="arrow2">
                <defs>
                    <marker id='head' orient="auto" markerUnits="userSpaceOnUse" markerWidth='20' markerHeight='20' refX='0' refY='7'>
                        <path d='M0,0 L0,15 L15,7 z' fill="none" stroke="red" stroke-width="1"/>
                    </marker>
                </defs>
                <path id='arrow2-line' marker-end='url(#head)' stroke-width='1' fill='none' stroke='red' d='M0 95 Q 36 40 72 90' />
            </svg>

            div#input1nest
                input(id="num1" name="num1" maxlength="1")
            div#input2nest
                input(id="num2" name="num2" maxlength="1")

    script(src="js/app.js")



